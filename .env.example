# Database (choose one format)
# Local SQLite file:
DATABASE_URL=file:./sailor.sqlite
# Turso (remote SQLite):
# DATABASE_URL=libsql://your-db.turso.io?authToken=your-token  
# PostgreSQL:
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Auth
BETTER_AUTH_SECRET=
BETTER_AUTH_TELEMETRY=0

# OAuth (Populate to enable)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# File Upload Configuration
UPLOAD_FOLDER_STRUCTURE=flat        # flat=no subfolders, date=organize by date
UPLOAD_MAX_FILE_SIZE=10.0MB         # Maximum size per file
UPLOAD_ALLOWED_TYPES=image/*,application/pdf  # Comma-separated MIME types

# Local Storage (used when no S3_BUCKET is configured)
UPLOAD_DIR=static/uploads           # Directory for local file storage

# S3/R2 Cloud Storage (auto-enabled when S3_BUCKET is set)
S3_BUCKET=                          # S3/R2 bucket name
S3_REGION=                          # S3 region (use 'auto' for Cloudflare R2)
S3_ACCESS_KEY_ID=                   # S3/R2 access key
S3_SECRET_ACCESS_KEY=               # S3/R2 secret key
S3_ENDPOINT=                        # Custom endpoint (required for R2, optional for S3)
S3_PUBLIC_URL=                      # Public URL for serving files

# Image Cache Configuration (for transformed/resized images)
CACHE_MAX_SIZE=1GB            # Maximum cache size

# System
DEBUG_MODE=false
LOG_LEVEL=error # debug | info | warn | error